<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ItemFragment">

    <fragment
        android:id="@+id/ItemFragment"
        android:name="ch.hslu.mobpro.packing_list.ItemFragment"
        android:label="ItemFragment"
        tools:layout="@layout/fragment_item">

        <action
            android:id="@+id/action_ItemFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />

        <action
            android:id="@+id/action_ItemFragment_to_CreateListFragment"
            app:destination="@id/CreateListFragment" />
    </fragment>

    <fragment
        android:id="@+id/CreateListFragment"
        android:name="ch.hslu.mobpro.packing_list.CreatelistFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_createlist">

        <action
            android:id="@+id/action_CreateListFragment_To_ItemFragment"
            app:destination="@id/ItemFragment" />
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="ch.hslu.mobpro.packing_list.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_ItemFragment"
            app:destination="@id/ItemFragment" />
    </fragment>
</navigation>